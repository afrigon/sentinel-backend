{
  "name": "sentinel-backend",
  "version": "0.0.1",
  "description": "backend for the sentinel mod",
  "keywords": [
    "sentinel",
    "backend",
    "discord",
    "minecraft",
    "mod",
    "monitor",
    "monitoring",
    "health",
    "status"
  ],
  "homepage": "https://github.com/afrigon/sentinel-backend#readme",
  "bugs": {
    "url": "https://github.com/afrigon/sentinel-backend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afrigon/sentinel-backend.git"
  },
  "license": "MIT",
  "author": "xehos",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint src eslint.config.mjs",
    "type-check": "tsc --noEmit",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --target=node24 --outdir=dist --minify --packages=external",
    "dev": "tsx --env-file .env watch src/index.ts serve -p 3000",
    "start": "tsx --env-file .env src/index.ts",
    "serve": "tsx --env-file .env src/index.ts serve -p 3000",
    "deploy-commands": "tsx --env-file .env src/index.ts deploy-commands"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "discord.js": "^14.22.1"
  }
}
